<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.airsharing.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="#99ccff">

        <ImageView
            android:layout_width="184dp"
            android:layout_height="112dp"
            android:layout_gravity="center"
            android:layout_marginTop="130px"
            android:src="@drawable/cloud"
            android:layout_weight="0.21" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="AIR-SHARING"
            android:textSize="40dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="실시간 공기 모니터링"
            android:textSize="23dp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130px"
            android:layout_gravity="center"
            android:text="LOGIN"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <EditText
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:hint="id" />

        <EditText
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:hint="passwd" />

        <Button
            android:id="@+id/normal_login"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50px"
            android:background="#99ccff"
            android:text="로그인"
            android:textSize="20dp" />

        <Button
            android:id="@+id/naver"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10px"
            android:text="네이버로 로그인하기"
            android:textSize="20dp" />

        <Button
            android:id="@+id/kakao"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10px"
            android:text="카카오톡으로 로그인하기"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130px"
            android:layout_gravity="center"
            android:text="아직 회원이 아니신가요?"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/signup"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10px"
            android:background="#e6dbff"
            android:textColor="#ffffff"
            android:text="Register!"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>
